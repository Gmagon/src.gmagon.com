#search-input-wrap
  display: inline-block
  padding-left: 6px
  padding-bottom: 8px
  &.on
    display: inline-block

#search-input-icon
  color: color-navy-font
  padding-right: 0.5em
  display: inline-block
  opacity: 0.7

#search-input
  background: none
  font-size: inherit
  font-family: font-title
  color: color-navy-font
  outline: none
  -webkit-appearance: none


////////////////////////////
.searchbox-container
    padding: 24px 0px
    searchbox-container
    .ais-search-box
        @media screen
            max-width: 50%
            width: 50%
            margin: 0 auto
        @media mq-normal
            max-width: 50%
            width: 50%

        #searchbox-q
            border-radius: 0;
            padding-bottom: 7px;

    .input-group
        margin-top: 5px;
        .form-control:focus
            outline: none;
            box-shadow: none;

.searchbox-display-section
    display: flex
    flex-direction: row

    aside
        left: 0;
        bottom: 10px;
        width: 230px;
        background: #FFFFFF;
        border-right: 1px solid #E8E8E8; 
        .badge
            font-size: .8em;
            background: #BBBBBB;
            position: relative;
            top: 1px;
        h5
            color: #CE1312;
            margin-left: 30px;
            text-transform: uppercase;
            font-size: 10px;
            margin-top: 20px;
        .nav
            margin: 0 20px
            li a
                display: block;
                padding: 2px 10px;
                margin: 10px 0;

  
    article
        padding: 40px;
        max-width: 100%;
        width: 100%;
        min-height: 425px;
        border: none;
        box-shadow: 0 2px 4px rgba(5,15,44,0.9)
        background-color: #FFFFFF
 
        #stats
            padding-right: 14px;
            font-size: .8em;
            line-height: 24px;

        #hits
            padding: 0 15px;
            .ais-hits--item
                padding: 6px 0px

        #pagination 
            padding: 10px;
            text-align: center;
            .pagination a
                background: #F8F8F8;
                padding: 3px 8px;
                color: #333333;
                margin-right: 4px;

                &:active    
                    border-color: #b5b5b5;
                    background: #E8E8E8;
                &:hover
                    border-color: #cfcfcf;
                    background: #ebebeb;