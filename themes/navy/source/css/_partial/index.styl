
.cls-banner-start-link
  color: #fff
  background: color-link
  display: inline-block
  padding: 15px
  text-decoration: none
  transition: .2s
  cursor: pointer;
  &:hover
    background: color-link-hover



.intro-feature-list
  padding-top: 20px
  display: flex
  flex-flow: column
  @media mq-normal
    flex-flow: row wrap

  .intro-feature-wrap
    padding-top: 20px
    @media mq-normal
      flex: 0 0 50%
      padding-top: 50px

    .intro-feature
      position: relative
      text-align: center
      @media mq-normal
        text-align: left
        padding-left: 70px

      .intro-feature-icon
        color: color-link-ex
        font-size: 36px
        padding-bottom: 26px
        text-align: center
        @media mq-normal
          position: absolute
          top: 0
          left: 20px
          font-size: 24px
          width: @font-size
      .intro-feature-link
        text-decoration: none
        color: black

      .intro-feature-title
        color: color-link-ex
        font-family: font-title
        font-size: 24px
        a
          color: inherit
          text-decoration: none
          transition: 0.2s
          &:hover
            color: color-link-ex-hover

      .intro-feature-desc
        margin: line-height 0
        line-height: line-height


.recommend-container
  display: flex
  .recommend-product-link
    text-decoration: none
    color: black
  .recommend-product-item
    text-align: center

    .product-item-image
      padding: 4px
      min-width: 128px
      min-height: 128px

    .product-item-title
      font-size: 20px
      font-weight: bold
      padding: 4px
    
    .product-item-description
      padding: 4px