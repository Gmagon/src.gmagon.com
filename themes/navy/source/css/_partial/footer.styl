#footer
  clearfix()
  padding: 40px 0
  color: color-navy-font
  font-family: font-title
  position: relative
  background: color-navy
  text-align: center
  @media mq-normal
    text-align: left
  @media print
    display: none
  a
    color: inherit
    text-decoration: none
    transition: 0.2s
    &:hover
      color: color-link-hover

#footer-some-docs
  line-height: 1.4
  @media mq-normal
    float: left
  .footer-doc-link
    margin-top: 0
    font-size: 12px
    padding: 2px
    &:hover
      text-decoration: underline

#footer-copyright
  line-height: 1.4
  margin-left: 12px
  @media mq-normal
    float: left
  a
    font-weight: bold

#footer-links
  margin-top: 1em
  @media mq-normal
    float: right
    margin-top: 0

.footer-link
  font-size: 30px
  margin-left: 20px
  &:first-child
    margin-left: 0
