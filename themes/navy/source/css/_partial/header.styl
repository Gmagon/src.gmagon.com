header-padding-normal = 10px
header-padding-max = 30px
logo-size = 50px

#header
  position: relative
  padding: header-padding-normal 0
  user-select: none
  box-shadow: 0 2px 3px rgba(5,15,44,0.5)
  @media print
    display: none

#header-inner
  display: flex
  flex-flow: row nowrap
  align-items: center
  @media mq-mobile
    justify-content: center

#logo-wrap
  flex: 0 logo-size
  span
    font-family: font-title
    font-weight: bold
    user-select: none
    text-transform: capitalize;
    cursor: pointer;


#logo
  hide-text()
  background: url("/logo.svg")
  width: logo-size
  height: logo-size
  background-size: @width @height
  display: block

#main-nav
  display: none
  flex: 1 auto
  padding-left: 20px
  font-weight: bold
  text-transform: uppercase;
  // text-align: center;
  @media mq-normal
    display: block

.main-nav-link
  color: color-menu-nav-font
  text-decoration: none
  line-height: logo-size
  opacity: 0.7
  transition: 0.2s
  font-family: font-title
  display: inline-block
  padding: 0 15px
  &:hover
    opacity: 1
    color: color-link-hover
    text-decoration: underline  

.main-nav-link-active
  opacity: 1
  color: color-link-hover


#header
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 2;
  background: white
  .main-nav-link
    text-transform: capitalize;
    color: black
    &:hover
      opacity: 1
      color: color-link-hover
      text-decoration-line: underline;
  .main-nav-link-active
    opacity: 1
    text-decoration-line: underline;

#lang-select-wrap
  display: none
  position: relative
  @media mq-normal
    display: block

#lang-select-label
  color: color-navy-font
  opacity: 0.7
  font-family: font-title
  line-height: logo-size
  span
    padding-left: 8px
  i
    opacity: 0.7

#lang-select
  opacity: 0
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  -webkit-appearance: menulist-button
  font-size: inherit
